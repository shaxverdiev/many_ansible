apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ deployment_name }}
  namespace: {{ namespace }}
spec:
  replicas: {{ replicas }}
  selector:
    matchLabels:
      app: {{ app_label }}
  template:
    metadata:
      labels:
        app: {{ app_label }}
    spec:
      containers:
      - name: {{ container_name }}
        image: {{ image }}
        ports:
        - containerPort: {{ container_port }}
