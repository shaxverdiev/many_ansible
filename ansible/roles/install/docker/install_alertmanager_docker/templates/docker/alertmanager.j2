version: '3'

services:
  alertmanager:
    image: "{{ image }}"
    container_name: "{{ cont_name }}"
    restart: always
    volumes:
      - "{{ volume }}:/etc/alertmanager/"
    ports:
      - {{ external_port }}:9093
    command:
      - '--config.file=/etc/alertmanager/config.yml'
      - '--storage.path=/alertmanager'