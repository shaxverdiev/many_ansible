version: '3'

services:
  db:
    image: {{ image }}
    container_name: {{ cont_name }}
    restart: always
    volumes: 
      - {{ volume }}:/var/lib/postgresql/data
    ports:
      - {{ external_port }}:5432
    environment:
      - POSTGRES_USER={{ user }}
      - POSTGRES_PASSWORD={{ pass }}
      - POSTGRES_DB={{ db }}
