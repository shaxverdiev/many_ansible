version: '3.8'
services:
  db:
    image: {{ image }}
    container_name: {{ cont_name }}
    restart: always
    environment:
      - POSTGRES_USER={{ user }}
      - POSTGRES_PASSWORD={{ pass }}
      - POSTGRES_DB={{ db }}
    ports:
      - '{{ external_port }}:5432'
    volumes: 
      - {{ volume }}:/var/lib/postgresql/data

