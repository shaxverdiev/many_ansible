version: '3.9'

services:
  redis:
    image: "{{ image }}"
    container_name: "{{ cont_name}}"
    ports:
      - "{{ external_port }}:6379"
    volumes:
      - "{{ volume_1 }}/redis.conf:/usr/local/etc/redis/redis.conf:ro"
      - "{{ volume_2 }}:/data"
    command: ["redis-server", "/usr/local/etc/redis/redis.conf"]
    restart: always
