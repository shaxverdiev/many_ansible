version: '3'

services:
  jenkins-server:
    image: "{{ jenkins_server_image }}"
    container_name: "{{ cont_name }}"
    restart: always
    volume:
      - "{{ jenkins_volume_dir }}:/var/jenkins_home"
    ports:
      - "{{ jenkins_publish_port }}:8080"